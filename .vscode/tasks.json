{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-G", "MinGW Makefiles",
        "-DCMAKE_MAKE_PROGRAM=mingw32-make",
        "${workspaceFolder}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "mingw32-make",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
